<html lang="en">

  <head>
    <!-- title -->
    <title>Edit page</title>
    {{! edit page css }}
    <link rel="stylesheet" href="/css/editpage.css" />
  </head>

  <body>
    <form class="editpage" method="post" id="editForm">

    <div class="container">

      <h1 class="title">Edit Profile</h1>

      <div class="grid">
        <div class="form-group a">
          <label for="name">Name</label>
          <input id="uName" name="uName" type="text" value={{userdata.name}} readonly/>
        </div>

        <div class="form-group b">
          <label for="last-name">Lastname</label>
           <input id="uLastname" name="uLastname" type="text" value="{{#if userdata}}{{userdata.lastname}}{{/if}}" />
        </div>

        <div class="form-group email-group">
          <label for="email">Email</label>
          <input id="uEmail" name="uEmail" type="text" value={{userdata.gmail}} readonly>
        </div>

        <div class="form-group phone-group">
          <label for="phone">Phone Number</label>
          <input id="uPhone" name="uPhone" type="number" value="{{#if userdata}}{{userdata.phonenumber}}{{/if}}"/>
        </div>

        <div class="textarea-group">
          <div class="profile-pic">
            <label class="-label" for="file">
              <span class="glyphicon glyphicon-camera"></span>
              <span>Change Image</span>
            </label>
            <input id="uFile" type="file" name="uFile" onchange="loadFile(event)" />
            <img
              src="https://cdn.pixabay.com/photo/2017/08/06/21/01/louvre-2596278_960_720.jpg"
              id="output"
              width="200"
            />
          </div>
        </div>

        <div class="form-group">
          <label for="address">Adresse</label>
          <input id="uAddress" type="text" name="uAddress" value="{{#if userdata}}{{userdata.address}}{{/if}}"/>
        </div>

        <div class="form-group">
          <label for="city">City</label>
          <input id="uCity" type="text" name="uCity" value="{{#if userdata}}{{userdata.city}}{{/if}}"/>
        </div>

        <div class="form-group">
          <label for="zip">Code postal</label>
          <input id="uCode" type="number" name="uCode" value="{{#if userdata}}{{userdata.codePostal}}{{/if}}"/>
        </div>
      </div>

      <div class="checkboxes">
      </div>

      <div class="grid">
        <div class="form-group">
          <label for="password">New Password</label>
          <input id="uPassword" type="text" name="uPassword"/>
        </div>

        <div class="form-group">
          <label for="cPassword">Confirm Password</label>
          <input id="uConfirmPassword" type="text" name="uConfirmPassword"/>
        </div>

        <div class="grid">
          <div class="form-group">
            <button type="submit" class="button px-md-5">Submit</button>
          </div>

          <div class="form-group">
            <a href="/">
              <button type="reset" class="button px-md-5">Cancle</button>
            </a>
          </div>
        </div>
      </div>

      <div class="checkbox-group">
        <input id="newsletter" type="checkbox" checked />
        <label for="newsletter">We are saving your data in database.</label>
      </div>
    </div>

    </form>
  </body>
  {{! editpage js }}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="/js/editpage.js"></script>
</html>